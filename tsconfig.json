{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "moduleResolution": "node",
    "jsx": "react-jsx",
    "rootDir": "lib",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "declaration": true,
    "declarationMap": true,
    "skipLibCheck": true
  },
  "include": ["lib/**/*"]
}
